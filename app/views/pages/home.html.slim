- title t('meta_title')
- content_for :head do
  meta name='description' content=t('meta_description', appname: APP_CONFIG.app_name)

== render 'shared/flash_messages'
.splashscreen
  .splashscreen-container
    h2
      = APP_CONFIG.app_name
      - if APP_CONFIG.demo_mode
        '
        small demo
    h1= t('.os_carpooling_platform')
    == render 'facebook_login'
    .learn-more-container.mx.-auto.hidden-xs
      = link_to '#', class: 'btn btn-lg btn-learn-more' do
        = t('.learn_more')
        span.fa.fa-long-arrow-alt-down
#learn-more.featurettes
  .featurette
    .container
      span.fa.fa-road
      h3= t('.share_itinerary_title')
      p= t('.share_itinerary_content')
  .featurette
    .container
      span.fa.fa-users
      h3= t('.make_new_connections_title')
      p= t('.make_new_connections_content')
  .featurette
    .container
      span.fa.fa-money-bill-alt
      h3= t('.save_money_title')
      p= t('.save_money_content')
  .featurette
    .container
      span.fa.fa-magic
      h3= t('.thats_easy_title')
      p= t('.thats_easy_content')
  .featurette
    .container
      span.fa.fa-leaf
      h3= t('.help_environment_title')
      p= t('.help_environment_content')
  .featurette
    .container
      span.fab.fa-github
      h3= t('.open_source_title')
      p= t('.open_source_content_html', appname: APP_CONFIG.app_name, source_code_link: link_to(t('.source_code'), APP_CONFIG.repository_url))
.container.text-center
  .h2.join-us= t('.join_us_today')
  == render 'facebook_login'
== render 'shared/modal_why_facebook'
